import fetch from "node-fetch";

export default async function handler(req, res) {
    const CHANNEL_ID = "UCkaHtuBIU0JvmAxN5Qn6Ftw";

    try {
        // Datos de LemnosLife (no requiere API key)
        const response = await fetch(
            `https://yt.lemnoslife.com/channels?part=statistics&id=${CHANNEL_ID}`
        );
        const data = await response.json();

        res.status(200).json(data); // Retornamos al frontend
    } catch (err) {
        console.error(err);
        res.status(500).json({ error: "Error obteniendo datos de YouTube" });
    }
}
